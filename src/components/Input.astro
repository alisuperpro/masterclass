---
interface Props {
  id: string
  type?: import("astro/types").HTMLAttributes<"input">["type"]
  placeholder: string
  label: string
  required?: boolean
  name: string
}
const { id, type, placeholder, label, required, name } = Astro.props
---

<div
  class="flex flex-col gap-y-2 bg-white rounded-lg px-4 py-2 border border-gray-300"
>
  <label for={id} class="font-semibold">{label}</label>
  <input
    id={id}
    type={type}
    required={required}
    name={name}
    class="bg-white p-2 border-b border-gray-400 outline-none"
    placeholder={placeholder}
  />
</div>
