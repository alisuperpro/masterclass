---
const SPONSORS = [
  {
    name: "productos-promoca",
    img: "/sponsors/promoca.avif",
    class: "md:w-44 w-32",
    contact: "https://productospromoca.com",
  },
  {
    name: "cafe-turimiquire",
    img: "/sponsors/cafe-turimiquire.avif",
    contact: "https://www.instagram.com/cafe.turimiquire",
    class: "w-24",
  },
  {
    name: "bn-publicidad",
    img: "/sponsors/bn-publicidad.avif",
    class: "md:w-44 w-32",
    contact: "https://www.instagram.com/bnpublicidad.ve",
  },

  {
    name: "cafe-de-tus-sueños",
    img: "/sponsors/cafe-de-tus-sueños.avif",
    contact: "https://www.instagram.com/keilamartiarena",
    class: "w-28 md:w-32",
  },

  {
    name: "claj",
    img: "/sponsors/claj.avif",
    contact: "https://www.instagram.com/clajsistec",
    class: "w-24",
  },

  {
    name: "bubbers",
    img: "/sponsors/bubbers.avif",
    class: "w-16 md:w-20",
    contact: "https://www.instagram.com/bubbersccpmaturin",
  },
]
---

<div class="grid md:grid-cols-6 grid-cols-2 justify-center items-center px-8">
  {
    SPONSORS.map((el) => (
      <div class="flex justify-center items-center sponsors">
        <a href={el.contact} rel="noopener noreferrer">
          <img
            src={el.img}
            alt={"Cache marketing Patrocinadores"}
            id={el.name}
            class={el.class ? el.class : "w-28"}
            loading="eager"
          />
        </a>
      </div>
    ))
  }
</div>

<script>
  import { gsap } from "gsap"

  gsap.from(".sponsors", { opacity: 0 })
  gsap.to(".sponsors", {
    opacity: 1,
    ease: "linear",
    duration: 3,
    stagger: {
      each: 0.1,
      from: "end",
    },
  })
</script>
